{
	"name": "cmru-lab-learn",
	"packageManager": "pnpm@8.6.12",
	"author": "Faelayis <48393914+Faelayis@users.noreply.github.com>",
	"type": "module",
	"license": "apache-2.0",
	"engines": {
		"node": ">=16",
		"pnpm": ">=8"
	},
	"scripts": {
		"generator:json-schema": "pnpx ts-json-schema-generator --path ./script/types/**/*.d.ts",
		"preinstall": "npx only-allow pnpm",
		"prettier": "prettier --write . --ignore-unknown",
		"script:run": "pnpm tsm ./script/index.ts"
	},
	"dependencies": {
		"fast-glob": "3.3.1",
		"git-date-extractor": "4.0.1"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "4.2.0",
		"@types/node": "20.6.1",
		"prettier": "3.0.3",
		"prettier-plugin-pkgsort": "0.2.1",
		"prettier-plugin-sort-json": "3.1.0",
		"tslib": "2.6.2",
		"tsm": "2.3.0",
		"typescript": "5.2.2"
	},
	"prettier": {
		"bracketSameLine": true,
		"bracketSpacing": true,
		"printWidth": 180,
		"semi": true,
		"singleQuote": false,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.ts",
					"*.d.ts"
				],
				"options": {
					"plugins": [
						"@trivago/prettier-plugin-sort-imports"
					],
					"importOrderSeparation": true,
					"importOrderSortSpecifiers": true
				}
			},
			{
				"files": "*.json",
				"excludeFiles": [
					"package.json"
				],
				"options": {
					"plugins": [
						"prettier-plugin-sort-json"
					],
					"jsonRecursiveSort": true
				}
			},
			{
				"files": "package.json",
				"options": {
					"plugins": [
						"prettier-plugin-pkgsort"
					]
				}
			}
		]
	}
}
