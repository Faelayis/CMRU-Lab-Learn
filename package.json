{
	"name": "cmru-lab-learn",
	"license": "apache-2.0",
	"author": "Faelayis <48393914+Faelayis@users.noreply.github.com>",
	"type": "module",
	"scripts": {
		"eslint:fix": "eslint . --fix",
		"eslint:lint": "eslint .",
		"generator:json-schema": "pnpx ts-json-schema-generator --path ./script/types/**/*.d.ts",
		"preinstall": "npx only-allow pnpm",
		"prettier": "prettier --write . --ignore-unknown",
		"prettier:package-json": "pnpx prettier-package-json --write ./package.json --use-tabs false",
		"script:run": "node --import tsx script/index.ts",
		"start": "pnpm run script:run"
	},
	"dependencies": {
		"fast-glob": "3.3.2",
		"git-date-extractor": "4.0.1"
	},
	"devDependencies": {
		"@types/node": "20.14.10",
		"tsx": "4.16.2",
		"@typescript-eslint/eslint-plugin": "7.16.0",
		"@typescript-eslint/parser": "7.16.0",
		"eslint": "9.6.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-prettier": "5.1.3",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-sort-destructure-keys": "2.0.0",
		"eslint-plugin-typescript-sort-keys": "3.2.0",
		"eslint-plugin-unicorn": "54.0.0",
		"prettier": "3.3.2",
		"prettier-plugin-sort-json": "4.0.0",
		"tslib": "2.6.3",
		"typescript": "5.5.3"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=9"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es2024": true
		},
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"plugins": [
			"import",
			"simple-import-sort",
			"sort-destructure-keys",
			"prettier"
		],
		"rules": {
			"import/first": "warn",
			"import/newline-after-import": "warn",
			"import/no-duplicates": "warn",
			"simple-import-sort/imports": "warn",
			"simple-import-sort/exports": "warn",
			"sort-destructure-keys/sort-destructure-keys": "warn",
			"prettier/prettier": "warn"
		},
		"overrides": [
			{
				"files": [
					"*.ts",
					"*.d.ts"
				],
				"parser": "@typescript-eslint/parser",
				"plugins": [
					"@typescript-eslint",
					"typescript-sort-keys"
				],
				"extends": [
					"plugin:import/typescript",
					"plugin:@typescript-eslint/recommended",
					"plugin:typescript-sort-keys/recommended",
					"plugin:unicorn/all"
				],
				"rules": {
					"typescript-sort-keys/interface": "warn",
					"typescript-sort-keys/string-enum": "warn"
				}
			}
		]
	},
	"packageManager": "pnpm@9.6.0",
	"prettier": {
		"bracketSameLine": true,
		"bracketSpacing": true,
		"printWidth": 180,
		"semi": true,
		"singleQuote": false,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": "*.json",
				"options": {
					"plugins": [
						"prettier-plugin-sort-json"
					],
					"jsonRecursiveSort": true
				}
			}
		]
	}
}
